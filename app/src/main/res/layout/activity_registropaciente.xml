<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registropaciente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blue3"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="125dp"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="473dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="8"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="120dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp" />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:id="@+id/text_registro"
        android:layout_below="@id/logo"
        android:textAlignment="center"
        android:textSize="24dp"
        android:fontFamily="@font/fontbold"
        android:textColor="@color/blue2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_below="@+id/text_registro"
        android:textSize="15dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setnombre"
        android:layout_below="@id/text_registro"
        android:hint="Ingresa tu nombre(s)"
        android:textSize="14dp"
        android:fontFamily="@font/fontregular"
        android:background="@drawable/text_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:layout_below="@id/setnombre"
        android:textSize="15dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setapellidos"
        android:hint="Ingresa tus apellidos"
        android:layout_below="@id/setnombre"
        android:fontFamily="@font/fontregular"
        android:textSize="14dp"
        android:background="@drawable/text_border"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtgenero"
        android:layout_below="@id/setapellidos"
        android:text="Genero"
        android:fontFamily="@font/fontregular"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp" />
   <Spinner
       android:id="@+id/setgenero"
       android:layout_below="@id/txtgenero"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="10dp"
       android:layout_width="150dp"
       android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefono"
        android:id="@+id/txtel"
        android:layout_below="@id/setapellidos"
        android:fontFamily="@font/fontregular"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/txtgenero"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_telefono"
        android:layout_below="@id/txtel"
        android:layout_alignLeft="@id/setgenero"
        android:hint="000-000-0000"
        android:textSize="14dp"
        android:background="@drawable/text_border"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setgenero"
        android:text="Correo"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fontregular"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setemail"
        android:background="@drawable/text_border"
        android:layout_below="@id/setgenero"
        android:layout_marginTop="25dp"
        android:hint="Ingresa tu email"
        android:fontFamily="@font/fontregular"
        android:textSize="14dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setemail"
        android:text="Fecha de nacimiento"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/setfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setemail"
        android:hint="Fecha"
        android:textSize="14dp"
        android:inputType="date"
        android:focusable="true"
        android:clickable="true"
        android:maxLines="1"
        android:fontFamily="@font/fontregular"
        android:background="@drawable/text_border"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setfecha"
        android:text="Contraseña"
        android:fontFamily="@font/fontregular"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp" />


    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/password"
        android:layout_below="@id/setfecha"
        android:inputType="textPassword"
        android:background="@drawable/text_border"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Val. contrañeña"
        android:layout_below="@id/setfecha"
        android:layout_marginTop="7dp"
        android:textSize="15dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/black"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/confirmpassword"
        android:layout_below="@id/setfecha"
        android:inputType="textPassword"
        android:background="@drawable/text_border"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerbtn"
        android:layout_below="@+id/password"
        android:backgroundTint="@color/blue3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Registrate"/>



</RelativeLayout>