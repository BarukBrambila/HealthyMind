<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    tools:context=".registropaciente">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logonewsinfondo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logo"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:id="@+id/text_registro"
            android:layout_below="@id/logo"
            android:textAlignment="center"
            android:textSize="24dp"
            android:fontFamily="@font/fontbold"
            android:textColor="@color/blue2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_registro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_registro"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Nombre"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/setnombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_registro"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="Ingresa tu nombre(s)"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setnombre"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Apellidos"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/setapellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setnombre"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="Ingresa tus apellidos"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setapellidos"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/fontregular"
                    android:text="CURP"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/curp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setapellidos"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="Ingresa tu curp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtgenero"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/curp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Género"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/setgenero"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtgenero"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txtel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/curp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Teléfono"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/set_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtel"
                    android:layout_alignLeft="@id/setgenero"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:hint="000-000-0000"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setgenero"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Correo"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/setemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setgenero"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="Ingresa tu email"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setemail"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Fecha de nacimiento"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/setfecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setemail"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/fontregular"
                    android:hint="Fecha"
                    android:maxLines="1"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setfecha"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Contraseña"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/setfecha"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_border"
                    android:inputType="textPassword" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Val. contraseña"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/setfecha"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/registerbtn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_register_bienvenida"
                    android:text="Registrate" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>