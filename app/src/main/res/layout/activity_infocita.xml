<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infocita">
    <TextView
        android:id="@+id/desing_fondo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rectangle_4"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fecha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de tu cita:"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="28dp"
        android:fontFamily="@font/fontbold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/desing_fondo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:text="Especialista:"
            android:textSize="20dp"
            android:textColor="@color/blue2"
            android:fontFamily="@font/fontbold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre espe"
            android:id="@+id/textespe"
            android:layout_below="@id/txt1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontregular"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:layout_below="@id/textespe"
            android:text="Fecha de la cita:"
            android:textSize="20dp"
            android:textColor="@color/blue2"
            android:fontFamily="@font/fontbold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:id="@+id/textfecha"
            android:layout_below="@id/txt2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontregular"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:layout_below="@id/textfecha"
            android:text="Hora de la cita:"
            android:textSize="20dp"
            android:textColor="@color/blue2"
            android:fontFamily="@font/fontbold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:id="@+id/texthr"
            android:layout_below="@id/txt3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontregular"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt4"
            android:layout_below="@id/texthr"
            android:text="Costo:"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textColor="@color/blue2"
            android:fontFamily="@font/fontbold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$300MXM"
            android:id="@+id/textcosto"
            android:layout_below="@id/txt4"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontregular"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ir a pagar"
            android:id="@+id/btnpagar"
            android:layout_below="@id/textcosto"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:backgroundTint="@color/blue2"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"/>

    </RelativeLayout>
</RelativeLayout>