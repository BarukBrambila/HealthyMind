<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detalles_cita">

    <TextView
        android:id="@+id/desing_fondo"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/rectangle_4"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fecha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DR. nom. psicologo"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/image_perfil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text_title2"

        android:background="@drawable/border_2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="psicologo educativo"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noviembre 2023"
        android:layout_below="@id/image_perfil"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/matutino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario matutino"
        android:layout_below="@id/text_fecha"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_fecha">

        <ImageButton
            android:id="@+id/cuadro_1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_2"/>


        <ImageButton
            android:id="@+id/cuadro_2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_2"/>


        <ImageButton
            android:id="@+id/cuadro_3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_2"/>


        <ImageButton
            android:id="@+id/cuadro_4"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea_horarios1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/matutino">

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea_horarios2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linea_horarios1"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horarios vespertino"
        android:layout_below="@id/linea_horarios2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linea_horarios3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linea_horarios2"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea_horarios4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linea_horarios3"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_2" />

    </LinearLayout>

    <Button
        android:id="@+id/agendar_cita"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agendar cita"
        android:textColor="@color/white"
        android:background="@drawable/border_2"
        android:backgroundTint="@color/blue4"
        android:layout_below="@id/linea_horarios4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>

</RelativeLayout>