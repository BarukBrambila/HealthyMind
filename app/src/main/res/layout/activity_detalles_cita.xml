<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detalles_cita">

    <TextView
        android:id="@+id/desing_fondo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rectangle_4"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fecha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontbold"
        android:text="Nombre"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/text_title2"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_3"
        app:civ_border_color="@color/blue2"
        app:civ_border_width="4dp"
        tools:ignore="MissingClass" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtespe"
        android:text="psicologo educativo"
        android:layout_below="@id/image_perfil"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/desing_fondo"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seleccionar_dia"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontbold"
                android:text="Seleccionar dÃ­a"
                android:textAlignment="center"
                android:textColor="#105FD4"
                android:textSize="25dp" />

            <DatePicker
                android:id="@+id/calendario"
                android:layout_width="314dp"
                android:layout_height="354dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontbold"
                android:text="Horarios disponibles"
                android:textAlignment="center"
                android:textColor="#105FD4"
                android:textSize="25dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/agendar"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_background"
                android:text="AgendAR"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="h"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>