<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    tools:context=".pago">
    <Button
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fecha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logonewsinfondo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:id="@+id/r1"
        android:layout_below="@id/imageView"
        android:background="@drawable/rounded_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago con tarjeta de debito"
            android:textColor="@color/blue2"
            android:textSize="24dp"
            android:fontFamily="@font/fontbold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/fontregular"
                android:text="Numero de tajeta:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ntarjeta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/text_border"
                android:fontFamily="@font/fontregular"
                android:hint="xxxx xxxx xxxx xxxx"
                android:gravity="center"
                android:textSize="18dp" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:columnCount="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Fecha de vencimiento"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fontregular"
                    android:text="CVV"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/vencimiento"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="MM/AA"
                    android:gravity="center"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/cv"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_border"
                    android:fontFamily="@font/fontregular"
                    android:hint="xxx"
                    android:gravity="center"
                    android:textSize="18dp" />



            </GridLayout>
            <Button
                android:id="@+id/pagobtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_register_bienvenida"
                android:text="pagar" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>