<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue2"
    android:orientation="vertical"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView">

        <androidx.cardview.widget.CardView
            android:id="@+id/txtSignUp"
            android:layout_width="180dp"
            android:layout_height="620dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="8"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp" />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:id="@+id/txtlogin"
        android:layout_below="@id/imageView"
        android:fontFamily="@font/fontbold"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@color/blue2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:layout_below="@id/txtlogin"
        android:fontFamily="@font/fontregular"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlogin"
        android:hint="Ingresa tu nombre de usuario"
        android:textAlignment="center"
        android:fontFamily="@font/fontregular"
        android:background="@drawable/text_border"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:id="@+id/setUsername"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setUsername"
        android:text="E-mail:"
        android:fontFamily="@font/fontregular"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@example.com"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_border"
        android:textAlignment="center"
        android:fontFamily="@font/fontregular"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/setUsername"
        android:layout_marginTop="30dp"
        android:id="@+id/setemail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrase単a:"
        android:layout_below="@id/setemail"
        android:fontFamily="@font/fontregular"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu contrase単a"
        android:inputType="textPassword"
        android:background="@drawable/text_border"
        android:layout_below="@id/setemail"
        android:fontFamily="@font/fontregular"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/setContrasena"/>
    <Button
        android:id="@+id/forgotPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多Olvidaste tu contrase単a?"
        android:fontFamily="@font/fontbold"
        android:onClick="sendMessage"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/setContrasena"
        android:textSize="12dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="@color/blue3" />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPasswd"
        android:backgroundTint="@color/blue3"
        android:textColor="@color/white"
        android:fontFamily="@font/fontbold"
        android:layout_centerHorizontal="true"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"/>
    <Button
        android:id="@+id/btnBackregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIngresar"
        android:text="Aun no tienes una cuenta? Registrate aqui"
        android:onClick="sendMessage"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/blue3"/>




</RelativeLayout>