<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bienvenida">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_marginTop="-80dp"
        android:background="@drawable/img"/>

    <ImageView
        android:layout_width="278dp"
        android:layout_height="264dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/logo"
        android:layout_height="match_parent"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="491dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="8"
            android:layout_marginVertical="10dp"
            app:cardBackgroundColor="@color/blue3"
            app:cardCornerRadius="40dp" />


    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="32dp"
        android:fontFamily="@font/fontbold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agenda tus citas con nuestros psicologos"
        android:layout_marginTop="380dp"
        android:textAlignment="center"
        android:fontFamily="@font/fontregular"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/inisesion"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue"
        android:text="Iniciar SesiÃ³n" />

    <Button
        android:id="@+id/regist"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue2"
        android:text="Registrarse"/>



</RelativeLayout>
